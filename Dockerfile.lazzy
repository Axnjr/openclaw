FROM node:22-bookworm@sha256:cd7bcd2e7a1e6f72052feb023c7f6b722205d3fcab7bbcbd2d1bfdab10b1e935

# Install Bun (required for build scripts)
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

RUN corepack enable

WORKDIR /app

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./
COPY ui/package.json ./ui/package.json
COPY clawhub/package.json ./clawhub/package.json
COPY clawhub/packages/clawdhub/package.json ./clawhub/packages/clawdhub/package.json
COPY clawhub/packages/schema/package.json ./clawhub/packages/schema/package.json
COPY patches ./patches
COPY scripts ./scripts

RUN pnpm install --frozen-lockfile

COPY . .
RUN pnpm build
# Force pnpm for UI build (Bun may fail on ARM/Synology architectures)
ENV OPENCLAW_PREFER_PNPM=1
RUN pnpm ui:build

# Build clawhub CLI
WORKDIR /app/clawhub
RUN bun install
RUN bun run build
WORKDIR /app

# Expose clawdhub CLI globally
RUN ln -s /app/clawhub/packages/clawdhub/bin/clawdhub.js /usr/local/bin/clawdhub
RUN chmod +x /app/clawhub/packages/clawdhub/bin/clawdhub.js

ENV NODE_ENV=production

# Set default Railway/Lazzy environment variables
ENV OPENCLAW_STATE_DIR=/app/.openclaw
ENV OPENCLAW_WORKSPACE_DIR=/app/workspace

# Allow non-root user to write temp files during runtime/tests.
RUN chown -R node:node /app

# Security hardening: Run as non-root user
USER node

# Start gateway server with default config.
# Runs the bootstrap script first to map OPENCLAW_MODEL -> openclaw.json
# Binds to 0.0.0.0 (lan) for Railway proxy accessibility.
CMD ["sh", "-c", "node scripts/lazzy-bootstrap.js && node openclaw.mjs gateway --allow-unconfigured --bind lan"]
